{
  "version": "0.2.0",
  "configurations": [
    {
      "request": "launch",
      "name": "Debug the file open in the active editor",
      "type": "node",
      "program": "${file}",
      "cwd": "${workspaceFolder}",
      "runtimeExecutable": "deno",
      "runtimeArgs": [
        "run",
        "--inspect-wait",
        "--allow-all"
      ],
      "attachSimplePort": 9229
    }
  ]
}
